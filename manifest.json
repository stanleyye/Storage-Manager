{
  "manifest_version": 2,

  "name": "Storage Manager",
  "description": "Allows you to manager your storage settings in Chrome",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "cookies",
    "<all_urls>"
  ]
}
